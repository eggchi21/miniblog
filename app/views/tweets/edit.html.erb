<div class="container">
  <div class="row">
    <div class="col s12">
      <%= form_tag("/tweets/#{@tweet.id}", method: :patch ) do %>
        <h5><i class="material-icons">mode_edit</i> 投稿を編集</h5>
        <div class="row">
          <div class="input-field col s6">
            <textarea cols="30" name="text" placeholder="どんなことがあった？" rows="10"><%= @tweet.text %></textarea>
          </div>
        </div>  
        <div class="row">
          <button class="btn waves-effect waves-light" type="submit" name="action">シェア
            <i class="material-icons right">send</i>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>