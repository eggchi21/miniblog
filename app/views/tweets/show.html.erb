  <div class="container">
          <div class="col s12 m7">
            <div class="card horizontal">
              <div class="card-image">
                <% if @tweet.id % @tweet.user.like_num==0 %>
                  <%= image_tag('aho.jpg') %>
                <%else%>
                  <%= image_tag('normal.jpg') %>
                <%end%>
                <span class="card-title"><%= @tweet.id %>番目</</span>
              </div>
              <div class="card-stacked">
                  <div class="card-content">
                      <a href="/users/<%= @tweet.user_id%>"><%= @tweet.user.nickname %></a>
                      <%= simple_format(@tweet.text) %>
                      好きな数字:<%= @tweet.user.like_num %>

                  </div>
                  <div class="card-action">
                      <a class="waves-effect waves-teal"><i class="material-icons">child_care</i></a>
                    <%if user_signed_in? && current_user.id==@tweet.user_id%>
                      <%=link_to '編集',"/tweets/#{@tweet.id}/edit", method: :get %>
                      <%=link_to '削除',"/tweets/#{@tweet.id}", method: :delete %>
                    <%end%>
                  </div>
              </div>
            </div>
          </div>
    <div class="carousel" id="demo-carousel">
       <h5>好きな数字がこの投稿者と同じ人</h5>
        <% @users.each do |user| %>
          <a class="carousel-item" href= "/users/<%= user.id %>" ><%=user.nickname%><%= image_tag  @image %></a>
        <%end%>
    </div>
  </div>
