<div class="container">
  <div class="row">
    <div class="col s12">
          <h5><i class="material-icons">person</i> ログイン</h5>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %> 

              <div class="row">                
                <div class="input-field col s6">
                  <%= f.label :email %><br />
                  <%= f.email_field :email %>
                </div>
              </div>  
              <div class="row">   
                <div class="input-field col s6">
                  <%= f.label :password %><br />
                  <%= f.password_field :password, autocomplete: "off" %>
                </div>
               </div>
              <div class="row">  
                <% if devise_mapping.rememberable? -%>
                  <div class="input-field col s6">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>
              </div>
              <div class="row">    
                <div class="actions">
                  <a class="waves-effect waves-light btn"><%= f.submit "Log in" %><i class="material-icons left">person</i></a>
                </div>
              </div> 
          <% end %>
          <%= render "devise/shared/links" %>
    </div>
  </div>
