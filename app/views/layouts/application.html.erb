<!DOCTYPE html>
<html>
  <head>
    <title>Miniblog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <script
    src="https://code.jquery.com/jquery-3.4.1.js"
    integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
    crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"> 
      <script>
      document.addEventListener('DOMContentLoaded', function() {
      var elems = document.querySelectorAll('.sidenav');
      var instances = M.Sidenav.init(elems, {});
    });
  </script>
  </head>

  <body>
    <nav>
    <div class="nav-wrapper">
      <a href="/tweets" class="brand-logo">好きな数字の倍数だけアホになれるブログ</a>
      <div id="nav-mobile" class="right hide-on-med-and-down">
        <% if user_signed_in? %>
          <div class="user_sign_in">
            <span><%=current_user.nickname%></span>
            <a href="/users/<%=current_user.id%>">マイページ</a>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            <a class="post" href="/tweets/new">投稿する</a>  
          </div>  
        <% else %>
          <div class="user_sign_in_not">
            <%= link_to "ログイン",new_user_session_path, class: 'post' %>
            <%= link_to "新規ユーザー登録",new_user_registration_path, class: 'post'%>
          </div>  
        <% end %>
      </div>
    </div>
  </nav>
  
    <%= yield %>
  </body>
</html>
